{
  "name": "layer-pg",
  "version": "0.1.0",
  "description": "Lambda Layer PostgreSQL",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp package.json nodejs",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:gitlab": "jest --ci --runInBand --coverage --reporters=jest-junit --detectOpenHandles"
  },
  "keywords": [
    "Lambda",
    "Layer"
  ],
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/pg": "^8.6.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "aws-sdk": "^2.1048.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "pg": "^8.7.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "index.(t|j)s",
      ".strategy.(t|j)s",
      ".entity.(t|j)s",
      ".decorator.(t|j)s",
      "custom-auth.guard.(t|j)s",
      "src/config/*",
      "src/core/middleware/logger.*",
      "lambda.(t|j)s",
      "main.(t|j)s",
      "src/core/common/*",
      "src/core/constants/*",
      "src/core/validation/*",
      "src/models/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
